//ALL NOTIFICATION PROPERTIES ARE PART OF STRETCH GOALS AND WILL BE SET TO NULL

Table User {
  Id int [pk]
  username varchar
  password varchar
  email varchar
  cityId int [ref: > City.Id]
  createdDate datetime
  updatedDate datetime
  isActive bool
  image varchar
  notificationsEnabled bool  
  searchRadius int null  
  isAdmin bool 
}

Table City {
  Id int [pk]
  name varchar
  state varchar
  createdDate datetime
  updatedDate datetime
}

Table Artist {
  Id int [pk]
  name varchar
  imageUrl varchar
  spotifyArtistId varchar null
  createdDate datetime
  updatedDate datetime
  isDeleted bool
  deletedDate datetime null
}

Table Genre {
  Id int [pk]
  name varchar
  createdByUserId int [ref: > User.Id] null
  isSpotifyGenre bool
  createdDate datetime
  updatedDate datetime
  isDeleted bool
  deletedDate datetime null
}

Table Wishlist {
  Id int [pk]
  userId int [ref: > User.Id]
  concertId int [ref: > Concert.Id]
  createdDate datetime
  updatedDate datetime
  notes varchar
  notifyMe bool
  notifyPriceMin decimal null
  notifyPriceMax decimal null
  notifyLeadTime int null
  status varchar // 'PURCHASED', 'WAITING FOR PRICE DROP', 'HOPING TO GO'
  isDeleted bool
  deletedDate datetime null
}

Table Concert {
  Id int [pk]
  artistId int [ref: > Artist.Id]
  venueId int [ref: > Venue.Id]
  eventDate datetime
  isActive bool
  seatGeekEventId varchar null
  price_min decimal null
  price_max decimal null
  ticketUrl varchar null
  status varchar // 'SCHEDULED', 'CANCELLED', 'POSTPONED', 'COMPLETED'
  createdDate datetime
  updatedDate datetime
  isDeleted bool
  deletedDate datetime null
}

Table Venue {
  Id int [pk]
  name varchar
  cityId int [ref: > City.Id]
  address varchar
  capacity int
  parkingInfo text
  websiteUrl varchar
  latitude decimal null
  longitude decimal null
  createdDate datetime
  updatedDate datetime
  isDeleted bool
  deletedDate datetime null
}

Table FavoriteArtist {
  Id int [pk]
  userId int [ref: > User.Id]
  artistId int [ref: > Artist.Id]
  createdDate datetime
  isDeleted bool
  deletedDate datetime null
}

Table ArtistGenre {
  Id int [pk]
  artistId int [ref: > Artist.Id]
  genreId int [ref: > Genre.Id]
  createdDate datetime
  updatedDate datetime
}

Table UserConcertHistory {
  Id int [pk]
  userId int [ref: > User.Id]
  concertId int [ref: > Concert.Id]
  attended bool
  createdDate datetime
  updatedDate datetime
}
