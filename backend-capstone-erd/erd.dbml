Table Notification {
  Id int [pk]
  userId int [ref: > User.Id]
  concertId int [ref: > Concert.Id]
  type varchar      // 'PRICE_ALERT', 'ARTIST_ANNOUNCEMENT', 'CANCELLATION', 'DATE_REMINDER'
  message varchar   // "Concert is now within your price range!", "Your favorite artist announced a show!", etc.
  isRead bool       // Has user seen this notification
  isEmailed bool    // If email was sent
  createdDate datetime
  sentDate datetime null
}